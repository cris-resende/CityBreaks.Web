@page
@model CreatePropertyModel
@{
    ViewData["Title"] = "Cadastrar Nova Propriedade";
}

<div class="container mt-4">
    <h1 class="mb-4">Cadastrar Nova Propriedade</h1>

    <div class="row">
        <div class="col-md-6">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div> @* Exibe erros de validação gerais *@

                <div class="form-group mb-3">
                    <label asp-for="Input.Name"></label>
                    <input asp-for="Input.Name" class="form-control" />
                    <span asp-validation-for="Input.Name" class="text-danger"></span> @* Exibe erro específico do campo *@
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Input.PricePerNight"></label>
                    <input asp-for="Input.PricePerNight" class="form-control" type="number" step="0.01" /> @* step="0.01" para permitir decimais *@
                    <span asp-validation-for="Input.PricePerNight" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Input.CityId"></label>
                    <select asp-for="Input.CityId" asp-items="Model.CityOptions" class="form-control">
                        <option value="">-- Selecione uma Cidade --</option> @* Opção padrão *@
                    </select>
                    <span asp-validation-for="Input.CityId" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Cadastrar Propriedade</button>
                <a asp-page="/Index" class="btn btn-secondary">Cancelar</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    } @* Inclui scripts de validação no cliente *@
}