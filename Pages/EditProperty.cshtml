@page "{id:int}"
@model EditPropertyModel
@{
    ViewData["Title"] = "Editar Propriedade";
}

<div class="container mt-4">
    <h1 class="mb-4">Editar Propriedade</h1>

    <div class="row">
        <div class="col-md-6">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input type="hidden" asp-for="Input.Id" />

                <div class="form-group mb-3">
                    <label asp-for="Input.Name"></label>
                    <input asp-for="Input.Name" class="form-control" />
                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Input.PricePerNight"></label>
                    <input asp-for="Input.PricePerNight" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="Input.PricePerNight" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label>Cidade:</label>
                    <input type="text" value="@Model.Property.City.Name" class="form-control" readonly />
                </div>

                <button type="submit" class="btn btn-primary">Salvar Alterações</button>
                <a asp-page="/Index" class="btn btn-secondary">Cancelar</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}